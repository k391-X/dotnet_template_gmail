@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Quên mật khẩu</title>
    <style>
        body {
            font-family: "Segoe UI", Arial, sans-serif;
            background: linear-gradient(135deg, #e3f2fd, #bbdefb);
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .forgot-container {
            background: #fff;
            padding: 40px 35px;
            border-radius: 12px;
            width: 340px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.15);
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        h2 {
            text-align: center;
            color: #0455A4;
            margin-bottom: 10px;
        }

        .input-group {
            display: flex;
            flex-direction: column;
            gap: 6px;
        }

        label {
            font-weight: 600;
            font-size: 14px;
            color: #333;
        }

        input {
            width: 100%;
            padding: 12px;
            border-radius: 6px;
            border: 1px solid #ccc;
            font-size: 15px;
            box-sizing: border-box;
            transition: border-color 0.2s;
        }

        input:focus {
            border-color: #0455A4;
            outline: none;
        }

        button {
            width: 100%;
            background: #0455A4;
            color: white;
            border: none;
            padding: 12px;
            border-radius: 6px;
            cursor: pointer;
            font-size: 16px;
            font-weight: 600;
            transition: background 0.2s;
        }

        button:hover {
            background: #03448a;
        }

        .error {
            color: red;
            text-align: center;
            margin-top: 5px;
            font-size: 14px;
        }

        .success {
            color: green;
            text-align: center;
            margin-top: 5px;
            font-size: 14px;
        }

        .footer-link {
            text-align: center;
            font-size: 14px;
            margin-top: 8px;
        }

        .footer-link a {
            color: #0455A4;
            text-decoration: none;
        }

        .footer-link a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <form asp-controller="Auth" asp-action="ForgotPassword" method="post" class="forgot-container">
        <h2>Quên mật khẩu</h2>

        <div class="input-group">
            <label for="email">Email</label>
            <input type="text" id="email" name="email" placeholder="Nhập email của bạn" required />
        </div>

        <button type="submit">Gửi liên kết đặt lại mật khẩu</button>

        @if (ViewBag.Error != null)
        {
            <div class="error">@ViewBag.Error</div>
        }
        @if (ViewBag.Success != null)
        {
            <div class="success">@ViewBag.Success</div>
        }

        <div class="footer-link">
            <a href="/login">Quay lại đăng nhập</a>
        </div>
    </form>
</body>
</html>
